<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/zxc"
        android:id="@+id/imageView21"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:id="@+id/dao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/imageView21"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:text="现价;99.00"
            android:textSize="20sp"
            android:textColor="#F00055"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="原价：128.00"
            android:textSize="10sp"
            android:textColor="#F00055"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvtime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="#3B3B3B"
            android:text="12"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvtime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="12"
            android:textColor="#FFFFFF"
            android:background="#3B3B3B"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvtime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="#3B3B3B"
            android:textColor="#FFFFFF"
            android:text="13"
            android:textSize="15sp" />

    </LinearLayout>





    <ImageView
        android:id="@+id/self_suning"
        android:src="@mipmap/self_suning"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_below="@+id/dao" />
    <TextView
        android:id="@+id/name"
        android:textSize="18dp"
        android:text="你好"
        android:layout_below="@id/dao"
        android:layout_toRightOf="@id/self_suning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@id/dao"
        android:layout_alignParentRight="true"
        android:src="@mipmap/commodity_shear_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/fuwu"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:textSize="15dp"
            android:text="服务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/yunfei"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:text="你好啊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/dizhi"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fuwu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:textSize="15dp"
            android:text="送至"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/address"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:text="你好啊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dizhi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <!--<TextView-->
            <!--android:textSize="15dp"-->
            <!--android:text="已选"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->


        <!--<TextView-->
            <!--android:id="@+id/xinghao"-->
            <!--android:textSize="15dp"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:text="你好啊"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

    </LinearLayout>

</RelativeLayout>
