<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_weight="1"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_back" />
        <TextView
            android:id="@+id/shangping"
            android:layout_weight="2"
            android:text="商品"
            android:textColor="#FF5A54"
            android:textSize="25dp"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/xiangqing"
            android:layout_weight="2"
            android:text="详情"
            android:textSize="25dp"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_weight="2"
            android:text="评价"
            android:textSize="25dp"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <ImageView
            android:layout_weight="2"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@mipmap/commodity_shoppingcard" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ebuy" />

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        ></android.support.v4.view.ViewPager>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/commodity_castom_down"
             />
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/commodity_favor_down"
             />
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/commodity_shop_down"
             />
        <RelativeLayout
            android:background="#FFC001"
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/car"
android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
            android:text="立即购买"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        </RelativeLayout>
        <RelativeLayout
            android:background="#DD0000"
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
            android:id="@+id/gouwu"
            android:text="加入购物车"
            android:textSize="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
